@model NobatOnline.Areas.Admin.Models.CityModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<Caption-Header asp-title="d" TitleFor="ثبت / ویرایش شهر" IconFor="fa fa-map-marker"></Caption-Header>
<form asp-area="Admin" asp-controller="City" asp-action="Create" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row mx-auto w-50 p-3 shadow-lg">
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="ProvinceId"></label>
                <select asp-for="ProvinceId" asp-items="Model.Provices" class="form-control"></select>
                <span class="text-danger" asp-validation-for="ProvinceId"></span>
            </div>
        </div>
        <div class="form-group w-100 text-center">
            <button type="submit" class="btn btn-success">ذخیره اطلاعات</button>
        </div>
    </div>
</form>

