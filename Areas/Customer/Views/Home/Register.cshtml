@model NobatOnline.Areas.Customer.Models.CustomerModel
@{
    Layout="~/Areas/Customer/Views/Shared/_Layout.cshtml";
    ViewData["Title"]="Register";
}
<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>ورود به سایت</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="card shadow-lg ">
        <div class="card-body login-card-body">
            <p class="login-box-msg">فرم زیر را تکمیل کنید و ورود بزنید</p>
            <form  asp-controller="Customer" asp-action="Register" method="post">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="FirstName">نام </label>
                            <input asp-for="FirstName" type="text" class="form-control"  />
                            <span class="text-danger" asp-validation-for="FirstName" ></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="LastName">نام خانوادگی </label>
                            <input asp-for="LastName" type="text" class="form-control"  />
                            <span class="text-danger" asp-validation-for="LastName" ></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="NationalCode">کد ملی</label>
                            <input asp-for="NationalCode" type="text" class="form-control"  />
                            <span class="text-danger" asp-validation-for="NationalCode" ></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="PhoneNumber">تلفن همراه</label>
                            <input asp-for="PhoneNumber" type="text" class="form-control"  />
                            <span class="text-danger" asp-validation-for="PhoneNumber" ></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="UserName">کلمه عبور</label>
                            <input asp-for="UserName" type="text" class="form-control"  />
                            <span class="text-danger" asp-validation-for="UserName" ></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="Password">رمز عبور</label>
                            <input asp-for="Password" type="text" class="form-control"  />
                            <span class="text-danger" asp-validation-for="Password" ></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">تکرارکلمه عبور</label>
                            <input asp-for="ConfirmPassword" type="text" class="form-control"  />
                            <span class="text-danger" asp-validation-for="ConfirmPassword" ></span>
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-danger w-100 text-center"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">ورود</button>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>