@model NobatOnline.Areas.Makeuper.Models.BeautyModel
@{
    Layout = "~/Areas/Makeuper/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create";
}

<Caption-Header asp-title="s" TitleFor="ثبت آرایشگاه جدید" IconFor="fa fa-user-md"></Caption-Header>
<form asp-area="Makeuper" asp-controller="Beauty" asp-action="Create" method="post">
    <div class="row w-50 sw-100 mx-auto shadow-lg p-3">
        <div class="col-lg-4">
            <label asp-for="BeautyName"></label>
            <input type="text" asp-for="BeautyName" class="form-control" />
            <span asp-validation-for="BeautyName" class="text-danger"></span>
        </div>
        <div class="col-lg-4">
            <label asp-for="CityId"></label>
            <select asp-for="CityId" asp-items="Model.City" class="form-control"></select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>
        <div class="col-lg-4">
            <label asp-for="Phone"></label>
            <input type="text" asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <label asp-for="Address"></label>
            <input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="col-lg-12 m-1">
            <div class="btn-group">
                <button class="btn btn-success" type="submit">ذخیره اطلاعات</button>
                <a href="/Admin/Makeuper" class="btn btn-warning text-white">انصراف</a>
            </div>
        </div>
    </div>

</form>
