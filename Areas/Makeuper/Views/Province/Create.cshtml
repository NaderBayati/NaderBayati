@model NobatOnline.Areas.Makeuper.Models.ProvinceModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Makeuper/Views/Shared/_Layout.cshtml";
}
<Caption-Header asp-title="d" TitleFor="ثبت / ویرایش استان" IconFor="fa fa-map-marker"></Caption-Header>
<form asp-area="Makeuper" asp-controller="Province" asp-action="Create" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row mx-auto w-50 p-3 shadow-lg">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group w-100 text-center">
            <button type="submit" class="btn btn-success">ذخیره اطلاعات</button>
        </div>
    </div>
</form>